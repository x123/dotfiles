#!/usr/bin/env bash
set -eo pipefail

if [ -z "$1" ]
then
  echo "Error: ${0} requires a system name to apply."
  echo "Example: ${0} hetznix"
  exit 1
fi

SHORT_HOSTNAME=$1

if which nixos-rebuild
then
  # this works for remote builders
  sudo --preserve-env=NIX_SSHOPTS nixos-rebuild -v switch --flake .#"${SHORT_HOSTNAME}"
  # below only needed if private git repos are pulled in by the flake, but will break remote building application via apply-remote-ssh
  #sudo --preserve-env=SSH_AUTH_SOCK nixos-rebuild -v switch --flake .#"${SHORT_HOSTNAME}"
elif which darwin-rebuild
then
  sudo darwin-rebuild -v switch --flake .#"${SHORT_HOSTNAME}"
else
  echo "Error: Could not find nixos-rebuild or darwin-rebuild ... Bailing out!"
  exit 1
fi
