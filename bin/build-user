#!/usr/bin/env bash
set -xeuo pipefail

if which scutil
then
  HOSTNAME=$(scutil --get LocalHostName)
else
  HOSTNAME=$(hostname -s)
fi

if [ ! "$(whoami)" ]
then
	echo "Error: Not able to determine USER ... Bailing out!";
	exit 1;
else
  USER=$(whoami)
fi

if [ -z "${HOSTNAME}" ]
then
  echo "Error: Not able to determine HOSTNAME ... Bailing out!";
  exit 1;
fi

echo "${USER}-${HOSTNAME}"
pushd ~/.dotfiles || exit 1
if nix build -v .#homeManagerConfigurations."${USER}"-"${HOSTNAME}".activationPackage
then
  nvd diff "$(home-manager generations |  grep -v "Home Manager not found at" | head -n1 | awk -F " -> " '{print $2}')" ./result 
  popd || exit 1
else
  echo "Build above failed, cannot use nvd to compare previous generation";
  popd || exit 1
  exit 1;
fi
